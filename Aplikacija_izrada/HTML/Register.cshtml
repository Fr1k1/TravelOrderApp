
@using System.Web.Optimization


<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Registracija</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="icon" href="../Slike/favicon.png" />
    <link rel="stylesheet" href="~/CSS/LoginForm.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>window.jQuery || document.write(decodeURIComponent('%3Cscript src="js/jquery.min.js"%3E%3C/script%3E'))</script>
    <script src="https://kit.fontawesome.com/fd13aa364a.js" crossorigin="anonymous"></script>
    <script src="/JS/Register.js"></script>
</head>


<body>

    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;" id="register_card">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="../Slike/umjesto_loga.jpg"
                                     alt="login form" class="img-fluid lijeva-slika-na-formi" style="border-radius: 1rem 0 0 1rem; width:624px; height:920px;" />
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">

                                    <form id="forma">

                                        <div class="d-flex align-items-center mb-3 pb-1">

                                        </div>

                                        <h4 class="fw-normal mb-3 pb-3 podaci_o_tvrtki" style="letter-spacing: 1px;">Podaci o tvrtki</h4>

                                        <div class="form-outline mb-4">
                                            <i class="fas fa-input-numeric ikonica-prvi ikonica_oib"></i>
                                            <input type="text" id="oib" autocomplete="new-password" class="form-control form-control-lg prvi_dio" />
                                            <label class="form-label-prvi" for="oib">OIB</label>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <i class="fa-regular fa-building-user ikonica-prvi"></i>
                                            <input type="text" id="ime_tvrtke" class="form-control form-control-lg prvi_dio" />
                                            <label class="form-label-prvi" for="ime_tvrtke">Ime tvrtke</label>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <i class="fa-regular fa-location-dot ikonica-prvi"></i>
                                            <input type="text" id="adresa_tvrtke" class="form-control form-control-lg prvi_dio" />
                                            <label class="form-label-prvi" for="adresa_tvrtke">Adresa tvrtke</label>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <i class="fa-regular fa-earth-europe ikonica-prvi"></i>
                                            <input type="text" id="drzava" class="form-control form-control-lg prvi_dio" />
                                            <label class="form-label-prvi" for="drzava">Država</label>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <i class="fa-regular fa-map-location-dot ikonica-prvi"></i>
                                            <input type="text" id="grad" class="form-control form-control-lg prvi_dio" />
                                            <label class="form-label-prvi" for="grad">Grad</label>
                                        </div>
                                        <br /><br />
                                        <div id="pt2">

                                            <div class="form-outline mb-4">
                                                <i class="far fa-user ikonica-drugi"></i>
                                                <input type="text" id="ime_prezime" class="form-control form-control-lg   " />
                                                <label class="form-label-drugi" for="ime_prezime">Ime i prezime</label>
                                            </div>

                                            <div class="form-outline mb-4">
                                                <i class="far fa-at ikonica-drugi"></i>
                                                <input type="text" id="mail" class="form-control form-control-lg " />
                                                <label class="form-label-drugi" for="mail">Email</label>
                                            </div>

                                            <div class="form-outline mb-4">
                                                <i class="fa-regular fa-mobile-notch ikonica-drugi"></i>
                                                <input type="text" id="mobitel" class="form-control form-control-lg " />
                                                <label class="form-label-drugi" for="mobitel">Mobitel</label>
                                            </div>

                                        </div>

                                        <div class="pt-1 mb-4">
                                            <button class="btn btn-dark btn-lg btn-block dalje" type="button">Dalje</button>
                                            <button class="btn btn-dark btn-lg btn-block reg sakri" type="button">Spremi podatke</button>
                                        </div>
                                        <br />
                                        <a class="small text-muted" href="./Login.cshtml">Povratak na stranicu za prijavu</a>

                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script>
        var webAPIUrl = "https://" + '@System.Configuration.ConfigurationManager.AppSettings["FleetWebApiUrl"]';
        var userData = {};
        var AppConfig = {};
        AppConfig.TravelOrderAPIUrl = "https://" + '@System.Configuration.ConfigurationManager.AppSettings["TravelOrderAPIUrl"]';
    </script>

    <script src="../JS/Register.js"></script>

</body>
</html>